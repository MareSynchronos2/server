FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build

RUN git clone --recurse-submodules https://github.com/MareSynchronos2/server

WORKDIR /server/SinusSynchronousServer/SinusSynchronousServices/

RUN dotnet publish \
        --configuration=Release \
        --os=linux \
        --output=/SinusSynchronousServices \
        SinusSynchronousServices.csproj

FROM mcr.microsoft.com/dotnet/aspnet:9.0

RUN adduser \
        --disabled-password \
        --group \
        --no-create-home \
        --quiet \
        --system \
        sinus

COPY --from=build /SinusSynchronousServices /opt/SinusSynchronousServices
RUN chown -R sinus:sinus /opt/SinusSynchronousServices
RUN apt-get update; apt-get install curl -y

USER sinus:sinus
WORKDIR /opt/SinusSynchronousServices

CMD ["./SinusSynchronousServices"]
