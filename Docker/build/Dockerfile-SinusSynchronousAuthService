FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build

COPY SinusAPI /server/SinusAPI
COPY SinusSynchronousServer/SinusSynchronousShared /server/SinusSynchronousServer/SinusSynchronousShared
COPY SinusSynchronousServer/SinusSynchronousAuthService /server/SinusSynchronousServer/SinusSynchronousAuthService

WORKDIR /server/SinusSynchronousServer/SinusSynchronousAuthService/

RUN dotnet publish \
        --configuration=Debug \
        --os=linux \
        --output=/build \
        SinusSynchronousAuthService.csproj

FROM mcr.microsoft.com/dotnet/aspnet:9.0

RUN adduser \
        --disabled-password \
        --group \
        --no-create-home \
        --quiet \
        --system \
        sinus

COPY --from=build /build /opt/SinusSynchronousAuthService
RUN chown -R sinus:sinus /opt/SinusSynchronousAuthService
RUN apt-get update; apt-get install curl -y

USER sinus:sinus
WORKDIR /opt/SinusSynchronousAuthService

CMD ["./SinusSynchronousAuthService"]
