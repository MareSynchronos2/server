FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build

RUN git clone --recurse-submodules https://github.com/MareSynchronos2/server

WORKDIR /server/SinusSynchronousServer/SinusSynchronousStaticFilesServer/

RUN dotnet publish \
        --configuration=Release \
        --os=linux \
        --output=/SinusSynchronousStaticFilesServer \
        SinusSynchronousStaticFilesServer.csproj

FROM mcr.microsoft.com/dotnet/aspnet:9.0

RUN adduser \
        --disabled-password \
        --group \
        --no-create-home \
        --quiet \
        --system \
        sinus

COPY --from=BUILD /SinusSynchronousStaticFilesServer /opt/SinusSynchronousStaticFilesServer
RUN chown -R sinus:sinus /opt/SinusSynchronousStaticFilesServer
RUN apt-get update; apt-get install curl -y

USER sinus:sinus
WORKDIR /opt/SinusSynchronousStaticFilesServer

CMD ["./SinusSynchronousStaticFilesServer"]
