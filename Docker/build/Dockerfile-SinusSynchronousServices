FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build

COPY SinusAPI /server/SinusAPI
COPY SinusSynchronousServer/SinusSynchronousShared /server/SinusSynchronousServer/SinusSynchronousShared
COPY SinusSynchronousServer/SinusSynchronousServices /server/SinusSynchronousServer/SinusSynchronousServices

WORKDIR /server/SinusSynchronousServer/SinusSynchronousServices/

RUN dotnet publish \
        --configuration=Debug \
        --os=linux \
        --output=/build \
        SinusSynchronousServices.csproj

FROM mcr.microsoft.com/dotnet/aspnet:9.0

RUN addgroup --gid 999 dockergroup
RUN adduser \
        --disabled-password \
        --no-create-home \
        --quiet \
        --system \
        --ingroup dockergroup \
        sinus

COPY --from=build /build /opt/SinusSynchronousServices
RUN chown -R sinus:dockergroup /opt/SinusSynchronousServices
RUN apt-get update; apt-get install curl -y

USER sinus:dockergroup
WORKDIR /opt/SinusSynchronousServices

CMD ["./SinusSynchronousServices"]
