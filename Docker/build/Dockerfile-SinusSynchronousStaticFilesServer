FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build

COPY SinusAPI /server/SinusAPI
COPY SinusSynchronousServer/SinusSynchronousShared /server/SinusSynchronousServer/SinusSynchronousShared
COPY SinusSynchronousServer/SinusSynchronousStaticFilesServer /server/SinusSynchronousServer/SinusSynchronousStaticFilesServer

WORKDIR /server/SinusSynchronousServer/SinusSynchronousStaticFilesServer/

RUN dotnet publish \
        --configuration=Release \
        --os=linux \
        --output=/build \
        SinusSynchronousStaticFilesServer.csproj


FROM mcr.microsoft.com/dotnet/aspnet:9.0

RUN adduser \
        --disabled-password \
        --group \
        --no-create-home \
        --quiet \
        --system \
        sinus

COPY --from=build /build /opt/SinusSynchronousStaticFilesServer
RUN chown -R sinus:sinus /opt/SinusSynchronousStaticFilesServer
RUN apt-get update; apt-get install curl -y

USER sinus:sinus
WORKDIR /opt/SinusSynchronousStaticFilesServer

CMD ["./SinusSynchronousStaticFilesServer"]